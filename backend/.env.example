# FisherMate.AI Backend Environment Variables
# Copy this file to .env and fill in your actual API keys

# Core AI and Weather APIs (FREE TIER)
# Google AI Studio API Key (for Gemini) - FREE: 15 requests/minute
GOOGLE_API_KEY=your_google_ai_studio_api_key_here

# OpenWeatherMap API Key - FREE: 1000 calls/day
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Twilio API Credentials (for WhatsApp and SMS) - PAID SERVICE
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_SMS_NUMBER=your_twilio_sms_number_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_SECRET_KEY=your_secret_key_here

# Database Configuration
DATABASE_URL=sqlite:///fishermate.db

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Logging Level
LOG_LEVEL=INFO

# API Rate Limiting
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_MINUTE=10

# IMD API Settings (Indian Meteorological Department) - FREE
IMD_API_URL=https://mausam.imd.gov.in/imd_latest
IMD_API_KEY=not_required_for_public_data

# Optional: Firebase Configuration (for future mobile notifications)
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Optional: Voice Services (for future implementation)
VOICE_ENABLED=false
OFFLINE_VOICE_ENABLED=false

# Cache Settings
CACHE_TIMEOUT=300

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Webhook URLs
WEBHOOK_BASE_URL=https://your-domain.com/api

# Languages Configuration
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,ta,te,ml,kn,bn,gu,mr,or,pa,ur

# Weather Alert Settings
WEATHER_ALERT_ENABLED=true
WEATHER_ALERT_THRESHOLD_WIND=25
WEATHER_ALERT_THRESHOLD_WAVE=2.5

# Legal Data Update Settings
LEGAL_DATA_AUTO_UPDATE=false
LEGAL_DATA_UPDATE_INTERVAL=24

# Safety Settings
EMERGENCY_CONTACT_ENABLED=true
EMERGENCY_LOCATION_TRACKING=true

# Analytics Settings
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=google

# Backup Settings
BACKUP_ENABLED=false
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
